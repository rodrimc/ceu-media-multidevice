#include "mars/mars-media.ceu"

/* internal */
event (none) mirror_ok;

par/or do
  #include "mars/core/mars-client.ceu"
  var int min_peers = _;

  code/tight Load_Sync_Config (none) -> none do
    [[
      CONFIG = {}
      min_peers = 2
      chunk = loadfile ('config.lua')
      if chunk then
        CONFIG = chunk ()

        min_peers = CONFIG.MIN_PEERS or min_peers
      end
    ]]
    outer.min_peers = [[ min_peers ]];
  end

  call Load_Sync_Config ();


  var&? Stub stub = spawn Stub (LOCALHOST, 8888, 0);
  watching stub do
    pool [] Stub_Send_Message send_message_pool;
    par do
      var uint id;
      var usize peers;
      (id, peers) = await stub.stub.joined;
      /* device_id is defined in mars-media.ceu */
      device_id = id;
    with
      watching mirror_ok do
        var uint new_peer;
        var usize peers;
        every (new_peer, peers) in stub.stub.new_peer do
          if (peers >= min_peers) then
            emit mirror_ok;
          end
        end
      end
    with
      loop do
        await stub.stub.incoming_message;
        _debug ("[APP(%u)] Message: %s\n", stub.stub.id, &&stub.stub.message[0]);

        [[ TABLE = load (@stub.stub.message)() ]]
        var uint device = [[ TABLE.device ]];
        var uint obj = [[ TABLE.object ]];
        var int type = [[ TABLE.type ]];

        if type == EVT_KEY then
          var[] byte key = [] .. [[ TABLE.key ]];
          var bool press = [[ TABLE.press ]];

          emit remote_mars_scene_key (device, obj, &&key[0], press);
        else/if type == EVT_SCENE_CLICK then
          var int x = [[ TABLE.x ]];
          var int y = [[ TABLE.y ]];
          var int button = [[ TABLE.button ]];
          var bool press = [[ TABLE.press ]];

          emit remote_mars_scene_mouse_clicked (device, obj, x, y,
                                                button, press);

        else/if type == EVT_PLAYER_CLICK then
          var int x = [[ TABLE.x ]];
          var int y = [[ TABLE.y ]];
          var int button = [[ TABLE.button ]];
          var bool press = [[ TABLE.press ]];

          emit remote_mars_player_mouse_clicked (device, obj, x, y,
                                                 button, press);
        end
      end
    with
      /* SCENE */

      /* KEY */
      var uint obj;
      var _char_ptr_ext key;
      var bool press;
      var[] byte tmp;
      every (obj, key, press) in mars_scene_key do
        stub.stub.wbuffer = [] .. "{device=";

        tmp = [] .. [[ tostring(@stub.stub.id) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",object=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@obj) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",type=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@EVT_KEY) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",key=\'";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. (_PTR(key) as _char&&);
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. "\',press=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@press) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. "}";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        spawn Stub_Send_Message (&stub.stub) in send_message_pool;
      end
    with
      /* CLICK */
      var uint obj;
      var int x;
      var int y;
      var int button;
      var bool press;
      var[] byte tmp;
      every (obj, x, y, button, press) in mars_scene_mouse_clicked do
        stub.stub.wbuffer = [] .. "{device=";

        tmp = [] .. [[ tostring(@stub.stub.id) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",object=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@obj) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",type=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@EVT_SCENE_CLICK) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",x=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@x) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",y=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@y) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",button=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@button) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",press=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@press) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. "}";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        spawn Stub_Send_Message (&stub.stub) in send_message_pool;
      end

    with
      /* PLAYER */
      var uint obj;
      var int x;
      var int y;
      var int button;
      var bool press;
      var[] byte tmp;
      every (obj, x, y, button, press) in mars_player_mouse_clicked do
        stub.stub.wbuffer = [] .. "{device=";

        tmp = [] .. [[ tostring(@stub.stub.id) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",object=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@obj) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",type=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@EVT_PLAYER_CLICK) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",x=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@x) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",y=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@y) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",button=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@button) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. ",press=";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. [[ tostring(@press) ]];
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        tmp = [] .. "}";
        call Str_Cat (&stub.stub.wbuffer, &tmp);

        spawn Stub_Send_Message (&stub.stub) in send_message_pool;
      end
    end
  end
with
  await mirror_ok;
  #include PROG
end

escape 0;
