#ifndef _CEU_SYNCHRONIZER
#define _CEU_SYNCHRONIZER

class Synchronizer with
  var int session;

  function (void) => int add_device;
do
  var int devices = 0;

  _printf ("[sync] Synchronizer for session %d created.\n", this.session);
  await FOREVER;

  function (void) => int add_device do
    devices = devices + 1;
    return devices;
  end
end


#endif
